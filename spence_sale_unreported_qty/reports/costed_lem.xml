<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="spence_costed_lem_unreported_qty" inherit_id="spence_lem_reports.spence_costed_lem_report_document">
        <xpath expr="//t[@t-if='not line.display_type']" position="attributes">
            <attribute name="t-if">not line.display_type and line.qty_unreported > 0</attribute>
        </xpath>
        <xpath expr="//span[@t-field='line.product_uom_qty']" position="replace">
            <span t-field="line.qty_unreported" />
        </xpath>
        <xpath expr="//t[@t-set='current_subtotal' and @groups='account.group_show_line_subtotals_tax_excluded']" position="replace">
            <t t-set="current_subtotal" t-value="current_subtotal + line.unreported_price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
        </xpath>
        <xpath expr="//t[@t-set='current_subtotal' and @groups='account.group_show_line_subtotals_tax_included']" position="replace">
            <t t-set="current_subtotal" t-value="current_subtotal + line.unreported_price_total" groups="account.group_show_line_subtotals_tax_included"/>
        </xpath>
        <xpath expr="//td[@name='td_subtotal']" position="replace">
            <td name="td_subtotal" class="text-right o_price_total">
                <span t-field="line.unreported_price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                <span t-field="line.unreported_price_total" groups="account.group_show_line_subtotals_tax_included"/>
            </td>
        </xpath>
        <xpath expr="//span[@t-field='doc.amount_untaxed']" position="replace">
            <span t-field="doc.unreported_amount_untaxed" />
        </xpath>
        <xpath expr="//t[@t-as='amount_by_group']" position="attributes">
            <attribute name="t-foreach">doc.unreported_amount_by_group</attribute>
        </xpath>
        <xpath expr="//t[@t-if='amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]']" position="attributes">
            <attribute name="t-if">amount_by_group[5] == 1 and doc.unreported_amount_untaxed == amount_by_group[2]</attribute>
        </xpath>
        <xpath expr="//span[@t-field='doc.amount_total']" position="replace">
            <span t-field="doc.unreported_amount_total" />
        </xpath>
    </template>
</odoo>