<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="spence_sale_order_crm_related_fields" model="ir.ui.view">
        <field name="name">Spence: Sale Order Form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='validity_date']" position="before">
                <field name="opportunity_id"/>
                <field name="location"/>
                <field name="asset_id"/>
                <field name="po_number"/>
            </xpath>
            <xpath expr="//group[@name='order_details']" position="inside">
                <field name="use_costed_report"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="button_lems" type="object" icon="fa-pencil-square-o" attrs="{'invisible': [('lem_count','=',0)]}">
                    <field name="lem_count"/>
                    <span attrs="{'invisible': [('lem_count','&gt;', 1)]}">LEM Sheet</span>
                    <span attrs="{'invisible': [('lem_count','&lt;=', 1)]}">LEM Sheets</span>
                </button>
            </xpath>
        </field>
    </record>
</odoo>