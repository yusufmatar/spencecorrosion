<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="spence_product_template_form_labour" model="ir.ui.view">
        <field name="name">Spence Corrosion: Product Template Labourer</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="is_labour" attrs="{'invisible': [('type', '!=', 'service')]}"/>
                <field name="labourer_title_id" attrs="{'invisible': ['|',('type', '!=', 'service'),('is_labour','=',False)],
                                                         'required': [('type', '=', 'service'),('is_labour','=',True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>