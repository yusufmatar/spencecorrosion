<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="spence_product_template_form_labour" model="ir.ui.view">
        <field name="name">Spence Corrosion: Product Template Labourer</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="spence_lem_reports.spence_product_template_form_type"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_type_lem']" position="after">
                <field name="labourer_title_id" attrs="{'invisible': ['|',('type', '!=', 'service'),('product_type_lem','!=','labour')],
                                                         'required': [('type', '=', 'service'),('product_type_lem','=','labour')]}"/>
            </xpath>
        </field>
    </record>
</odoo>